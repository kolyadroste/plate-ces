<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
        <!--
            @todo (prio low)
                some options are related to the default theme
                    - callout .main / .contrast / .default are not generic
                    - callout .opaque is not generic
                    Those should be added by manipulating the flexform if the default layout is chosen
        -->
    </meta>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Text</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.filter>
                        <TCEforms>
                            <label>Bild Filter</label>
                            <config>
                                <type>select</type>>
                                <renderType>selectSingle</renderType>
                                <items>
                                    <numIndex index="0">
                                        <numIndex index="0">Standard</numIndex>
                                        <numIndex index="1"></numIndex>
                                    </numIndex>
                                    <numIndex index="1">
                                        <numIndex index="0">Dunkler</numIndex>
                                        <numIndex index="1">darken</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.filter>
                    <settings.contentFrame>
                        <TCEforms>
                            <label>Rahmen Inhaltsbereich</label>
                            <config>
                                <type>select</type>>
                                <renderType>selectSingle</renderType>
                                <items>
                                    <numIndex index="0">
                                        <numIndex index="0">Standard</numIndex>
                                        <numIndex index="1"></numIndex>
                                    </numIndex>
                                    <numIndex index="1">
                                        <numIndex index="0">volle Breite</numIndex>
                                        <numIndex index="1">container-fluid</numIndex>
                                    </numIndex>
                                    <numIndex index="2">
                                        <numIndex index="0">Inhalts-Breite</numIndex>
                                        <numIndex index="1">container</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.contentFrame>
                    <settings.height>
                        <TCEforms>
                            <label>Höhe</label>
                            <config>
                                <type>select</type>>
                                <renderType>selectSingle</renderType>
                                <items>
                                    <numIndex index="0">
                                        <numIndex index="0">Standard</numIndex>
                                        <numIndex index="1"></numIndex>
                                    </numIndex>
                                    <numIndex index="1">
                                        <numIndex index="0">Volle Höhe</numIndex>
                                        <numIndex index="1">full</numIndex>
                                    </numIndex>
                                    <numIndex index="2">
                                        <numIndex index="0">Schmal</numIndex>
                                        <numIndex index="1">slim</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.height>
                    <settings.time>
                        <TCEforms>
                            <label>Überblendungzeit (Beispiel: '3s', '3000ms')</label>
                            <config>
                                <type>input</type>>
                            </config>
                        </TCEforms>
                    </settings.time>
                    <settings.buttonLabel>
                        <TCEforms>
                            <label>Buttonlabel</label>
                            <config>
                                <type>input</type>>
                            </config>
                        </TCEforms>
                    </settings.buttonLabel>
                    <settings.titleLayout>
                        <TCEforms>
                            <label>Größe Header</label>
                            <config>
                                <type>select</type>>
                                <renderType>selectSingle</renderType>
                                <items>
                                    <numIndex index="0">
                                        <numIndex index="0">Standard</numIndex>
                                        <numIndex index="1"></numIndex>
                                    </numIndex>
                                    <numIndex index="1">
                                        <numIndex index="0">H1</numIndex>
                                        <numIndex index="1">.h1</numIndex>
                                    </numIndex>
                                    <numIndex index="2">
                                        <numIndex index="0">H2</numIndex>
                                        <numIndex index="1">.h2</numIndex>
                                    </numIndex>
                                    <numIndex index="3">
                                        <numIndex index="0">H3</numIndex>
                                        <numIndex index="1">.h3</numIndex>
                                    </numIndex>
                                    <numIndex index="4">
                                        <numIndex index="0">H4</numIndex>
                                        <numIndex index="1">.h4</numIndex>
                                    </numIndex>
                                    <numIndex index="5">
                                        <numIndex index="0">H5</numIndex>
                                        <numIndex index="1">.h5</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.titleLayout>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>
