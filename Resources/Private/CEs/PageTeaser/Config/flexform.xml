<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Einstellungen</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.query>
                        <TCEforms>
                            <label>Auswahl der Unterseiten</label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">Standard (Unterseiten von aktueller Seite)</numIndex>
                                        <numIndex index="1">default</numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">Direktauswahl</numIndex>
                                        <numIndex index="1">direct_selection</numIndex>
                                    </numIndex>
                                    <numIndex index="2" type="array">
                                        <numIndex index="0">Unterseiten von Zielseite</numIndex>
                                        <numIndex index="1">subpages_from_selection</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.query>
                    <settings.pages>
                        <TCEforms>
                            <label>Seitenauswahl</label>
                            <displayCond>FIELD:settings.query:!=:default</displayCond>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>10</size>
                                <maxitems>20</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.pages>
                </el>
            </ROOT>
        </sDEF>
        <settings>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Einstellungen</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.sorting>
                        <TCEforms>
                            <label>Sortierung</label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">Standard</numIndex>
                                        <numIndex index="1"></numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.sorting>
                    <settings.background>
                        <TCEforms>
                            <label>Hintergrund</label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <itemsProcFunc>AtomicPlan\PlateCes\Utility\FlexTCADefaults->bgColor</itemsProcFunc>
                            </config>
                        </TCEforms>
                    </settings.background>
                    <settings.layout>
                        <TCEforms>
                            <label>Gestaltung</label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">Standard</numIndex>
                                        <numIndex index="1"></numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.layout>
                    <settings.columns>
                        <TCEforms>
                            <label>Spalten</label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">Standard</numIndex>
                                        <numIndex index="1"></numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">Spalten 50-50</numIndex>
                                        <numIndex index="1">cols-2</numIndex>
                                    </numIndex>
                                    <numIndex index="2" type="array">
                                        <numIndex index="0">Spalten 33-33-33</numIndex>
                                        <numIndex index="1">cols-3</numIndex>
                                    </numIndex>
                                    <numIndex index="3" type="array">
                                        <numIndex index="0">Spalten 25-25-25-25</numIndex>
                                        <numIndex index="1">cols-4</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.columns>
                    <settings.showImage>
                        <TCEforms>
                            <label>Bilder verstecken</label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">Standard</numIndex>
                                        <numIndex index="1"></numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">Anzeigen</numIndex>
                                        <numIndex index="1">show</numIndex>
                                    </numIndex>
                                    <numIndex index="2" type="array">
                                        <numIndex index="0">Verstecken</numIndex>
                                        <numIndex index="1">hide</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.showImage>
                    <settings.showDate>
                        <TCEforms>
                            <label>Datum anzeigen</label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">Standard</numIndex>
                                        <numIndex index="1"></numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">Anzeigen</numIndex>
                                        <numIndex index="1">show</numIndex>
                                    </numIndex>
                                    <numIndex index="2" type="array">
                                        <numIndex index="0">Verstecken</numIndex>
                                        <numIndex index="1">hide</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.showDate>
                </el>
            </ROOT>
        </settings>
    </sheets>
</T3DataStructure>
